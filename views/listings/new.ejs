<%layout("layouts/boilerplate")%>
<body >
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data" >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required class="form-control" type="text" placeholder="Historic Villa" name="title" >
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea required class="form-control" type="text" placeholder="enter descriptions" name="description"></textarea>
            <div class="invalid-feedback">
                please choose a description
            </div>
        </div>
         <!-- <div class="mb-3">
            <label for="image" class="form-label">image</label>
            <input class="form-control" type="text" placeholder="enter image URL/Link" name="image">
        
         </div> -->
         <div class="mb-3">
            <label for="image" class="form-label">Upload image</label>
            <input class="form-control" type="file" placeholder="upload image" name="image">
         </div>
         <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input required class="form-control" type="number" placeholder="2,000" name="price">
            <div class="invalid-feedback">
                Please choose a price.
              </div>
         </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input required class="form-control" type="text" placeholder="Goa" name="location" >
            <div class="invalid-feedback">
                Please choose a Location.
              </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input required class="form-control" type="text" placeholder="India" name="country" >
            <div class="invalid-feedback">
                Please choose a Country.
            </div>  
        </div>
        <div>
            
            <label for="category" class="form-label">Category</label>
            <input required class="form-control" type="text" placeholder="Trending,Rooms,IconicCity,Mountain,Castles,AmazingPool,Camping" name="category" >
            <div class="invalid-feedback">
                Please choose a Category.
            </div>  
        </div>
        
        <button class="btn btn-dark mb-3">Submit</button>
    </form>
    </div>
    </div>
</body>
